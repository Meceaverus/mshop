{% extends 'base.html.twig' %}

{% block body %}
        <h1>Корзина</h1>

        <table class="table table-striped">
            <tr>
                <th>Товар</th>
                <th>Цена</th>
                <th>Колличество</th>
                <th>Стоимость</th>
            </tr>

            {#@var App\Entity\OrderItem #}
            {% for item in order.items %}
                <tr>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.product.price }}</td>
                    <td>{{ item.count }}</td>
                    <td>{{ item.amount }}</td>
                </tr>
            {% endfor %}

            <tr>
                <td colspan="2">
                    Всего
                </td>
                <td>{{ order.count }}</td>
                <td>{{ order.amount }}</td>
            </tr>
        </table>
{% endblock %}